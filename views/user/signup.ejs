<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CourtPulse - Create Account</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>

<body class="bg-gray-200 min-h-screen flex items-center justify-center p-4">
    <div class="bg-white rounded-3xl shadow-xl max-w-4xl w-full overflow-hidden">
        <div class="flex flex-col lg:flex-row">
            <!-- Left side - Form -->
            <div class="flex-1 p-8 lg:p-12">
                <div class="max-w-md mx-auto">
                    <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-8">Create Account</h1>

                    <!-- Google Signup Button -->
                    <a
                        href="/auth/google"
                        class="w-full flex items-center justify-center gap-3 border border-gray-300 rounded-lg py-1.5 px-4 mb-6 hover:bg-gray-50 transition-colors">
                        <svg width="20" height="20" viewBox="0 0 24 24">
                            <path fill="#4285F4"
                                d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" />
                            <path fill="#34A853"
                                d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" />
                            <path fill="#FBBC05"
                                d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" />
                            <path fill="#EA4335"
                                d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" />
                        </svg>
                        <span class="text-gray-700 font-medium">Signup with Google</span>
                    </a>

                    <!-- Divider -->
                    <div class="flex items-center mb-6">
                        <div class="flex-1 border-t border-gray-300"></div>
                        <span class="px-4 text-gray-500 text-sm">or</span>
                        <div class="flex-1 border-t border-gray-300"></div>
                    </div>

                    <!-- Error Message under password, above login button -->
                    <% if (typeof message !=='undefined' && message) { %>
                        <div class="text-red-500 text-sm font-bold mt-1 text-center">
                            <%= message %>
                        </div>
                    <% } %>

                    <!-- Signup Form -->
                    <form id="signupForm" action="/signup" method="POST" class="space-y-4" novalidate>

                        <!-- Name Fields -->
                        <input type="text" name="name" id="name" placeholder="Name" required
                            class="w-full px-4 py-1.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all">
                        <small class="error text-red-500 text-sm mt-1 block" id="nameError"></small>

                        <!-- Contact Fields -->
                        <input type="tel" name="phone" id="phone" placeholder="Phone no" required
                            class="w-full px-4 py-1.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all">
                        <small class="error text-red-500 text-sm mt-1 block" id="phoneError"></small>

                        <input type="email" name="email" id="email" placeholder="Email" required
                            class="w-full px-4 py-1.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all">
                        <small class="error text-red-500 text-sm mt-1 block" id="emailError"></small>

                        <!-- Password Fields -->
                        <input type="password" name="password" id="password" placeholder="Password" required
                            class="w-full px-4 py-1.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all">
                        <small class="error text-red-500 text-sm mt-1 block" id="passwordError"></small>

                        <input type="password" name="cPassword" id="cPassword" placeholder="Confirm Password" required
                            class="w-full px-4 py-1.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all">
                        <small class="error text-red-500 text-sm mt-1 block" id="cPasswordError"></small>

                        <!-- Referral Code -->
                        <input type="text" name="referralCode" placeholder="Referal Code (Optional)"
                            class="w-full px-4 py-1.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all">

                        <!-- Submit Button -->
                        <button type="submit"
                            class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-1.5 px-6 rounded-lg transition-colors duration-200 mt-6">
                            SignUp
                        </button>
                    </form>

                    <!-- Login Link -->
                    <p class="text-center text-gray-600 mt-6">
                        Already have account ?
                        <a href="/login" class="text-indigo-600 hover:text-indigo-700 font-medium">Login now..!</a>
                    </p>
                </div>
            </div>

            <!-- Right side - Illustration -->
            <div
                class="flex-1 bg-gradient-to-br from-green-100 to-green-200 flex items-center justify-center p-8 lg:p-12">
                <div class="max-w-sm w-full">
                    <img src="/images/Personal Trainer-bro.svg" alt="Tennis player with racket and trophy illustration"
                        class="w-full h-auto object-contain">
                </div>
            </div>
        </div>
    </div>

    <script>


        document.getElementById("signupForm").addEventListener("submit", function (e) {
            e.preventDefault(); // Stop form submission

            // Input values
            const name = document.getElementById("name").value.trim();
            const email = document.getElementById("email").value.trim();
            const phone = document.getElementById("phone").value.trim();
            const password = document.getElementById("password").value;
            const cPassword = document.getElementById("cPassword").value;

            // Error elements
            const nameError = document.getElementById("nameError");
            const emailError = document.getElementById("emailError");
            const phoneError = document.getElementById("phoneError");
            const passwordError = document.getElementById("passwordError");
            const cPasswordError = document.getElementById("cPasswordError");

            // Reset errors
            nameError.textContent = "";
            emailError.textContent = "";
            phoneError.textContent = "";
            passwordError.textContent = "";
            cPasswordError.textContent = "";

            let isValid = true;

            // Name validation
            if (!/^[A-Za-z ]{3,}$/.test(name)) {
                nameError.textContent = "Name must be at least 3 letters.";
                isValid = false;
            }

            // Email validation
            if (!/^[^ ]+@[^ ]+\.[a-z]{2,3}$/.test(email)) {
                emailError.textContent = "Enter a valid email address.";
                isValid = false;
            }

            // Phone validation
            if (!/^\d{10}$/.test(phone)) {
                phoneError.textContent = "Phone number must be 10 digits.";
                isValid = false;
            }

            // Password validation
            const strongPasswordPattern = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[\W_]).{6,}$/;
            if (!strongPasswordPattern.test(password)) {
                passwordError.textContent = "Password must include uppercase, lowercase, number, special character & 6+ chars.";
                isValid = false;
            }

            // Confirm password
            if (password !== cPassword) {
                cPasswordError.textContent = "Passwords do not match.";
                isValid = false;
            }

            // Submit if valid
            if (isValid) {
                document.getElementById("signupForm").submit();
            }
        });

    </script>
</body>

</html>