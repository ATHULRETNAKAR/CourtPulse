<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Change Password</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body class="bg-gray-100 flex items-center justify-center min-h-screen">
  <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md">

    <h2 class="text-2xl font-bold mb-4 text-center">Change Password</h2>

    <p id="errorMsg" class="text-red-500 text-sm font-bold mt-1 text-center"></p>
    <form id="changePasswordForm" class="space-y-4">
      <div>
        <label for="newPassword" class="block text-sm font-medium text-gray-700">New password</label>
        <input type="password" id="newPassword" name="newPassword"
          class="mt-4 block w-full h-10 border border-gray-300 rounded-md ">
      </div>
      <div>
        <label for="confirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
        <input type="password" id="confirmPassword" name="confirmPassword"
          class="mt-4 block w-full h-10 border border-gray-300 rounded-md">
      </div>
      <button type="submit" class="w-full bg-purple-600 text-white py-2 px-4 rounded-md hover:bg-purple-700">Change
        Password</button>
      <a href="/login" class="block text-center text-sm text-gray-600 hover:text-gray-800">Go back to Login page</a>
    </form>
  </div>

  <script>

    const newPasswordInput = document.getElementById('newPassword');
    const errorMsg = document.getElementById('errorMsg');
    const strongPasswordPattern = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[\W_]).{6,}$/;

    newPasswordInput.addEventListener('input', () => {
      const newPasswordValue = newPasswordInput.value;
      if (!strongPasswordPattern.test(newPasswordValue)) {
        errorMsg.textContent = "Include upper & lowercase, number, special & min 6 characters";
      } else {
        errorMsg.textContent = ''
      }
    })

    document.getElementById('changePasswordForm').addEventListener('submit', async function (e) {
      e.preventDefault();

      const newPassword = document.getElementById('newPassword').value;
      const confirmPassword = document.getElementById('confirmPassword').value;

      if (newPassword === '' || confirmPassword === '') {
        errorMsg.textContent = 'Please enter the password';
        return;
      }

      if (newPassword !== confirmPassword) {
        return errorMsg.textContent = 'Passwords do not match';
        return;
      }

      errorMsg.textContent = "";

      try {
        const response = await fetch('/changePassword', {
          method: 'POST',
          headers: { 'content-Type': 'application/json' },
          body: JSON.stringify({ newPassword, confirmPassword })
        })

        const result = await response.json()

        if (!response.ok) {
          if (errorMsg) errorMsg.textContent = result.message || 'Failed to change password'
        } else {
          Swal.fire({
            icon: 'success',
            title: 'Password Changed!',
            text: result.message,  
            confirmButtonText: 'Go to Login'
          }).then(() => {
            window.location.href = '/login';
          });
        }

      } catch (error) {
        if (errorMsg) errorMsg.textContent = "Something went wrong. Please try again"
      }

    });
  </script>
</body>

</html>