        <section class="py-16 bg-gray-50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <h2 class="text-3xl font-bold text-center mb-12">Shop by Category</h2>
                <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-6">
                    <% categories.forEach((category, index)=> { %>
                        <div class="text-center group cursor-pointer">
                            <div class="bg-white p-6 rounded-lg shadow-sm group-hover:shadow-md transition-shadow">

                                <!-- Circle with first letter -->
                                <div class="w-16 h-16 mx-auto flex items-center justify-center rounded-full text-white text-xl font-bold mb-3 
              <% if(index % 5 === 0) { %> bg-purple-500 
              <% } else if(index % 5 === 1) { %> bg-green-500 
              <% } else if(index % 5 === 2) { %> bg-blue-500 
              <% } else if(index % 5 === 3) { %> bg-orange-500 
              <% } else { %> bg-red-500 <% } %>">
                                    <%= category.name.charAt(0).toUpperCase() %>
                                </div>

                                <!-- Category Name -->
                                <h3 class="font-medium text-gray-800">
                                    <%= category.name %>
                                </h3>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>
        </section>

