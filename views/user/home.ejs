<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CourtPulse - Badminton Equipment Store</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body class="bg-white">
    <!-- Header -->
    <%- include("../../views/partials/user/header") %>

        <!-- Hero Section -->
        <section class="bg-gradient-to-r from-purple-600 to-purple-800 text-white">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-20">
                <div class="grid lg:grid-cols-2 gap-8 items-center">
                    <div class="space-y-6">
                        <h1 class="text-4xl lg:text-6xl font-bold leading-tight">
                            Crafted for Champions.<br>
                            <span class="text-yellow-300">Delivered with Care..!</span>
                        </h1>
                        <p class="text-lg lg:text-xl text-purple-100 max-w-lg">
                            Gear up with top-tier badminton equipment made for performance. From rackets to shuttles,
                            we've got everything you need to elevate your game.
                        </p>
                        <div class="flex flex-col sm:flex-row gap-4">
                            <a href="/shop">
                                <button
                                    class="bg-white text-purple-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
                                    Shop Now
                                </button>
                            </a>
                            <button
                                class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-purple-600 transition-colors">
                                Explore â†’
                            </button>
                        </div>
                    </div>
                    <div class="relative">
                        <img src="/images/Daco_4450724.png" alt="Badminton Player" class="w-1/2 h-auto mx-auto">
                    </div>
                </div>
            </div>
        </section>

        <!-- Shop by Category Section -->
        <section class="py-16 bg-gray-50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <h2 class="text-3xl font-bold text-center mb-12">Shop by Category</h2>
                <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-6">
                    <% categories.forEach((category, index)=> { %>
                        <div class="text-center group cursor-pointer">
                            <div class="bg-white p-6 rounded-lg shadow-sm group-hover:shadow-md transition-shadow">
                                <!-- Circle with first letter -->
                                <div
                                    class="w-16 h-16 mx-auto flex items-center justify-center rounded-full text-white text-xl font-bold mb-3 <% if(index % 5 === 0) { %> bg-purple-500 <% } else if(index % 5 === 1) { %> bg-green-500 <% } else if(index % 5 === 2) { %> bg-blue-500 <% } else if(index % 5 === 3) { %> bg-orange-500 <% } else { %> bg-red-500 <% } %>">
                                    <%= category.name.charAt(0).toUpperCase() %>
                                </div>
                                <!-- Category Name -->
                                <h3 class="font-medium text-gray-800">
                                    <%= category.name %>
                                </h3>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>
        </section>

        <!-- Featured Sections -->
        <section class="py-16">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="grid md:grid-cols-2 gap-8">
                    <!-- Racquets & Strings -->
                    <div
                        class="bg-gradient-to-r from-red-500 to-pink-600 rounded-2xl p-8 text-white relative overflow-hidden">
                        <div class="relative z-10">
                            <h3 class="text-2xl font-bold mb-2">Racquets & Strings</h3>
                            <p class="text-red-100 mb-6">Up to 50% Off</p>
                            <a href="/shop">
                                <button
                                    class="bg-white text-red-600 px-6 py-2 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
                                    Shop Now
                                </button>
                            </a>
                        </div>
                        <div class="absolute right-4 top-4 w-32 h-auto">
                            <img src="/images/raquet-string.png" alt="Newsletter Illustration"
                                class="w-full h-auto mx-auto">
                        </div>
                    </div>
                    <!-- For Accessories -->
                    <div
                        class="bg-gradient-to-r from-orange-400 to-yellow-500 rounded-2xl p-8 text-white relative overflow-hidden">
                        <div class="relative z-10">
                            <h3 class="text-2xl font-bold mb-2">For Accessories</h3>
                            <p class="text-orange-100 mb-6">Up to 30% Off</p>
                            <a href="/shop">
                                <button
                                    class="bg-white text-orange-600 px-6 py-2 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
                                    Shop Now
                                </button>
                            </a>
                        </div>
                        <div class="absolute right-4 top-4 w-32 h-auto">
                            <img src="/images/accessories.png" alt="Newsletter Illustration"
                                class="w-full h-auto mx-auto">
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Newly Launched Products Section -->
        <section class="py-16 bg-gray-50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <h2 class="text-3xl font-bold text-center mb-12">Newly Launched</h2>
                <div class="relative">
                    <!-- Left Arrow -->
                    <button id="scrollLeft"
                        class="absolute left-0 top-1/2 transform -translate-y-1/2 bg-purple-600 text-white p-2 rounded-full hover:bg-purple-700 transition-colors z-10">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                        </svg>
                    </button>
                    <!-- Product Cards -->
                    <div id="productSlider"
                        class="flex overflow-x-auto snap-x snap-mandatory scrollbar-hide space-x-4 pb-4">
                        <% products.slice(0, 8).forEach(product=> { %>
                            <div class="snap-start flex-none w-1/2 sm:w-1/3 md:w-1/4 p-2">
                                <div
                                    class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300">
                                    <a href="/productDetail/<%= product.id %>">
                                        <img src="/productimg/<%= product.variants[0].images[0] %>" alt="<%= product.productName %>"
                                            class="w-full h-48 object-cover rounded-t-lg">
                                    </a>
                                    <div class="p-4">
                                        <h3 class="text-lg font-semibold text-gray-800 truncate">
                                            <%= product.productName %>
                                        </h3>
                                        <p class="text-sm text-gray-600">
                                            <%= product.brand.brandName %>
                                        </p>
                                        <div class="flex items-center mt-1">
                                            <p class="text-gray-600 font-medium">$<%=
                                                    product.variants[0].sellingPrice.toFixed(2) %>
                                            </p>
                                            <% if (product.variants[0].discount> 0) { %>
                                                <p class="text-sm text-gray-500 line-through ml-2">$<%=
                                                        product.variants[0].originalPrice.toFixed(2) %>
                                                </p>
                                                <p class="text-sm text-green-600 ml-2">
                                                    <%= Math.round(((product.variants[0].originalPrice -
                                                        product.variants[0].sellingPrice) /
                                                        product.variants[0].originalPrice) * 100) %>% Off
                                                </p>
                                                <% } %>
                                        </div>
                                        <div class="flex items-center mt-2">
                                            <% for (let i=0; i < 5; i++) { %>
                                                <svg class="w-4 h-4 <%= i < Math.floor(product.rating) ? 'text-yellow-400' : 'text-gray-300' %>"
                                                    fill="currentColor" viewBox="0 0 20 20">
                                                    <path
                                                        d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.957a1 1 0 00.95.69h4.162c.969 0 1.371 1.24.588 1.81l-3.37 2.448a1 1 0 00-.364 1.118l1.287 3.957c.3.921-.755 1.688-1.54 1.118l-3.37-2.448a1 1 0 00-1.175 0l-3.37 2.448c-.784.57-1.838-.197-1.54-1.118l1.287-3.957a1 1 0 00-.364-1.118L2.098 9.384c-.784-.57-.38-1.81.588-1.81h4.162a1 1 0 00.95-.69l1.286-3.957z" />
                                                </svg>
                                                <% } %>
                                        </div>
                                        <button
                                            class="mt-4 w-full bg-purple-600 text-white py-2 rounded-lg hover:bg-purple-700 transition-colors">
                                            Add to Cart
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <!-- Right Arrow -->
                    <button id="scrollRight"
                        class="absolute right-0 top-1/2 transform -translate-y-1/2 bg-purple-600 text-white p-2 rounded-full hover:bg-purple-700 transition-colors z-10">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </button>
                </div>
            </div>
        </section>

        <!-- Features Section -->
        <section class="py-16 bg-gray-50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="grid md:grid-cols-3 gap-8">
                    <div class="text-center">
                        <div class="bg-white p-6 rounded-lg shadow-sm mb-4">
                            <i class="fas fa-award text-4xl text-purple-600 mb-4"></i>
                        </div>
                        <h3 class="text-xl font-bold mb-2">Premium Quality Equipment</h3>
                        <p class="text-gray-600">Get the ultimate badminton and accessories trusted by professionals for
                            unmatched performance and durability.</p>
                    </div>
                    <div class="text-center">
                        <div class="bg-white p-6 rounded-lg shadow-sm mb-4">
                            <i class="fas fa-tags text-4xl text-green-600 mb-4"></i>
                        </div>
                        <h3 class="text-xl font-bold mb-2">Best Prices & Deals</h3>
                        <p class="text-gray-600">Enjoy competitive prices with exclusive discounts on sports gear,
                            shuttle cocks, and accessories.</p>
                    </div>
                    <div class="text-center">
                        <div class="bg-white p-6 rounded-lg shadow-sm mb-4">
                            <i class="fas fa-th-large text-4xl text-blue-600 mb-4"></i>
                        </div>
                        <h3 class="text-xl font-bold mb-2">Wide Product Selection</h3>
                        <p class="text-gray-600">Explore 1000+ badminton products, from powerful rackets to premium
                            grips, shoes to professional shuttlecocks.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Services Section -->
        <section class="py-16">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="grid md:grid-cols-3 gap-8">
                    <div class="text-center">
                        <i class="fas fa-clock text-4xl text-purple-600 mb-4"></i>
                        <h3 class="text-xl font-bold mb-2">Shop Anytime, Anywhere</h3>
                        <p class="text-gray-600">Browse and purchase your favorite badminton gear 24/7 from the comfort
                            of your home with our user-friendly online store.</p>
                    </div>
                    <div class="text-center">
                        <i class="fas fa-shipping-fast text-4xl text-green-600 mb-4"></i>
                        <h3 class="text-xl font-bold mb-2">Express Delivery</h3>
                        <p class="text-gray-600">Get your badminton equipment delivered within 24-48 hours with our
                            express delivery service.</p>
                    </div>
                    <div class="text-center">
                        <i class="fas fa-headset text-4xl text-blue-600 mb-4"></i>
                        <h3 class="text-xl font-bold mb-2">24x7 Customer Support</h3>
                        <p class="text-gray-600">Our dedicated support team is available round the clock to help you
                            with any queries and ensure the best shopping experience.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Newsletter Section -->
        <section class="bg-gradient-to-r from-purple-600 to-purple-800 py-16">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="grid lg:grid-cols-2 gap-8 items-center">
                    <div class="text-white">
                        <p class="text-purple-200 mb-2">$25 OFF on first purchase</p>
                        <h2 class="text-3xl lg:text-4xl font-bold mb-4">Get Top Deals, latest trends and more</h2>
                        <p class="text-purple-100 mb-6">Join Email subscription now and enjoy exclusive offers on your
                            notifications</p>
                        <div class="flex flex-col sm:flex-row gap-4">
                            <input type="email" placeholder="Email"
                                class="flex-1 px-4 py-3 rounded-lg text-gray-800 focus:ring-2 focus:ring-yellow-400 focus:outline-none">
                            <button
                                class="bg-yellow-400 text-purple-800 px-8 py-3 rounded-lg font-semibold hover:bg-yellow-300 transition-colors">
                                Subscribe
                            </button>
                        </div>
                    </div>
                    <div class="relative">
                        <img src="/images/subscribe.png" alt="Newsletter Illustration"
                            class="w-full h-auto max-w-sm mx-auto">
                    </div>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <%- include("../../views/partials/user/footer") %>

            <script src="/script-js/searchProduct.js"></script>
            <!-- Custom Scrollbar Hide CSS -->
            <style>
                .scrollbar-hide::-webkit-scrollbar {
                    display: none;
                }

                .scrollbar-hide {
                    -ms-overflow-style: none;
                    scrollbar-width: none;
                }
            </style>
            <!-- Arrow Navigation Script -->
            <script>
                document.addEventListener('DOMContentLoaded', () => {
                    const slider = document.getElementById('productSlider');
                    const scrollLeft = document.getElementById('scrollLeft');
                    const scrollRight = document.getElementById('scrollRight');

                    if (slider && scrollLeft && scrollRight) {
                        const cardWidth = slider.querySelector('div').offsetWidth + 16; // Card width + margin (space-x-4 = 16px)
                        scrollLeft.addEventListener('click', () => {
                            slider.scrollBy({ left: -cardWidth, behavior: 'smooth' });
                        });
                        scrollRight.addEventListener('click', () => {
                            slider.scrollBy({ left: cardWidth, behavior: 'smooth' });
                        });
                    }
                });
            </script>
</body>

</html>